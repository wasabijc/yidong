<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.mapper.RegionCellMapper">

	<!-- 实体映射 -->
	<resultMap id="base_result_map" type="com.example.entity.po.RegionCellEntity">
		<!-- 区域ID -->
		<id column="region_id" property="regionId"/>
		<!-- 基站ID -->
		<result column="cell_id" property="cellId"/>
	</resultMap>

	<!-- 通用结果查询列 -->
	<sql id="base_column_list">
		region_id, cell_id
	</sql>

	<!-- 基础查询条件 -->
	<sql id="base_query_condition">
		<if test="query.regionId != null and query.regionId != ''">
			and region_id = #{query.regionId}
		</if>
		<if test="query.cellId != null and query.cellId != ''">
			and cell_id = #{query.cellId}
		</if>
	</sql>

	<!-- 扩展查询条件 -->
	<sql id="extend_query_condition">
		<if test="query.regionIdFuzzy != null and query.regionIdFuzzy != ''">
			and region_id like concat('%',#{query.regionIdFuzzy},'%')
		</if>
		<if test="query.cellIdFuzzy != null and query.cellIdFuzzy != ''">
			and cell_id like concat('%',#{query.cellIdFuzzy},'%')
		</if>
	</sql>

	<!-- 列表查询条件 WHEN 模式 -->
	<!-- 使用 WHEN，最多只有一个 WHEN 分支被执行  -->
	<sql id="list_query_condition_use_when">
		<choose>
			<when test="query.regionIdList != null and query.regionIdList.size() > 0">
				and region_id in
				<foreach collection="regionIdList" separator="," open="(" close=")" item="regionId">
					#{regionId}
				</foreach>
			</when>
			<when test="query.cellIdList != null and query.cellIdList.size() > 0">
				and cell_id in
				<foreach collection="cellIdList" separator="," open="(" close=")" item="cellId">
					#{cellId}
				</foreach>
			</when>
			<otherwise>

			</otherwise>
		</choose>
	</sql>

	<!-- 列表查询条件 IF 模式  -->
	<!-- 使用 IF，可能有多个 IF 分支被执行  -->
	<sql id="list_query_condition_use_if">
		<if test="query.regionIdList != null and query.regionIdList.size() > 0">
			and region_id in
			<foreach collection="regionIdList" separator="," open="(" close=")" item="regionId">
			#{regionId}
			</foreach>
		</if>
		<if test="query.cellIdList != null and query.cellIdList.size() > 0">
			and cell_id in
			<foreach collection="cellIdList" separator="," open="(" close=")" item="cellId">
			#{cellId}
			</foreach>
		</if>
	</sql>

	<!-- 通用查询条件 -->
	<sql id="general_query_condition">
		<where>
			<include refid="base_query_condition"/>
			<include refid="extend_query_condition"/>
			<include refid="list_query_condition_use_when"/>
		</where>
	</sql>

	<!-- 查询列表 -->
	<!-- 这里包含了基础、扩展以及列表查询，使用时请注意查询条件 -->
	<!-- 建议使用时new一个新的query对象，然后设置需要查询的属性条件 -->
	<select id="selectList" resultMap="base_result_map">
		select
		<include refid="base_column_list"/>
		from region_cell
		<include refid="general_query_condition"/>
		<if test="query.orderBy != null">
			order by ${query.orderBy}
		</if>
		<if test="query.simplePage != null">
			limit #{query.simplePage.start},#{query.simplePage.pageSize}
		</if>
	</select>

	<!-- 查询数量 -->
	<!-- 这里包含了基础、扩展以及列表查询，使用时请注意查询条件 -->
	<!-- 建议使用时new一个新的query对象，然后设置需要查询的属性条件 -->
	<select id="selectCount" resultType="java.lang.Integer">
		select count(1) from region_cell
		<include refid="general_query_condition"/>
	</select>

	<!-- 单行插入 -->
	<!-- 允许指定主键 -->
	<insert id="insert" parameterType="com.example.entity.po.RegionCellEntity">
		insert into region_cell
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="bean.regionId != null">
				region_id,
			</if>
			<if test="bean.cellId != null">
				cell_id,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="bean.regionId != null">
				#{bean.regionId},
			</if>
			<if test="bean.cellId != null">
				#{bean.cellId},
			</if>
		</trim>
	</insert>

	<!-- 插入或更新（只要存在任一唯一键冲突就更新，否则插入） -->
	<!-- 允许null值覆盖非null值 -->
	<!-- 允许指定或更新主键 -->
	<!-- 允许指定或更新唯一键 -->
	<insert id="insertOrUpdate" parameterType="com.example.entity.po.RegionCellEntity">
		insert into region_cell
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="bean.regionId != null">
				region_id,
			</if>
			<if test="bean.cellId != null">
				cell_id,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="bean.regionId != null">
				#{bean.regionId},
			</if>
			<if test="bean.cellId != null">
				#{bean.cellId},
			</if>
		</trim>
		on duplicate key update
		region_id = values(region_id),
		cell_id = values(cell_id)
	</insert>

	<!-- 批量插入 -->
	<!-- 允许指定主键，不允许更新自增键 -->
	<insert id="insertBatch" parameterType="com.example.entity.po.RegionCellEntity">
		insert into
		region_cell(region_id,cell_id)
		values
		<foreach collection="list" item="item" separator=",">
			(
			#{item.regionId},#{item.cellId}
			)
		</foreach>
	</insert>

	<!-- 批量插入或更新 -->
	<!-- 允许null值覆盖非null值 -->
	<!-- 允许指定或更新主键，不允许更新自增键 -->
	<!-- 允许指定或更新非自增的的唯一键 -->
	<insert id="insertOrUpdateBatch" parameterType="com.example.entity.po.RegionCellEntity">
		insert into
		region_cell(region_id,cell_id)
		values
		<foreach collection="list" item="item" separator=",">
			(
			#{item.regionId},#{item.cellId}
			)
		</foreach>
		on duplicate key update
		region_id = values(region_id),
		cell_id = values(cell_id)
	</insert>

	<!-- 根据RegionIdAndCellId查询 -->
	<select id="selectByRegionIdAndCellId" resultMap="base_result_map">
		select
		<include refid="base_column_list"/>
		from region_cell
		where region_id=#{regionId} and cell_id=#{cellId}
	</select>

	<!-- 根据RegionIdAndCellId更新 -->
	<!-- 不允许null值覆盖非null值（若用一条除主键外全是null的数据更新，则报错） -->
	<!-- 允许指定主键 -->
	<update id="updateByRegionIdAndCellId" parameterType="com.example.entity.po.RegionCellEntity">
		update region_cell
		<set>
			<if test="bean.regionId != null">
				region_id = #{bean.regionId},
			</if>
			<if test="bean.cellId != null">
				cell_id = #{bean.cellId},
			</if>
		</set>
		where region_id=#{regionId} and cell_id=#{cellId}
	</update>

	<!-- 根据RegionIdAndCellId删除 -->
	<delete id="deleteByRegionIdAndCellId">
		delete
		from region_cell
		where region_id=#{regionId} and cell_id=#{cellId}
	</delete>


</mapper>
