<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.mapper.RegionCenterMapper">

	<!-- 实体映射 -->
	<resultMap id="base_result_map" type="com.example.entity.po.RegionCenterEntity">
		<!-- 区域ID -->
		<id column="region_id" property="regionId"/>
		<!-- 中心点坐标 -->
		<result column="center_point" property="centerPoint"/>
		<!-- 多边形边界点 -->
		<result column="polygon_points" property="polygonPoints"/>
	</resultMap>

	<!-- 通用结果查询列 -->
	<sql id="base_column_list">
		region_id, center_point, polygon_points
	</sql>

	<!-- 基础查询条件 -->
	<sql id="base_query_condition">
		<if test="query.regionId != null and query.regionId != ''">
			and region_id = #{query.regionId}
		</if>
		<if test="query.centerPoint != null and query.centerPoint != ''">
			and center_point = #{query.centerPoint}
		</if>
		<if test="query.polygonPoints != null and query.polygonPoints != ''">
			and polygon_points = #{query.polygonPoints}
		</if>
	</sql>

	<!-- 扩展查询条件 -->
	<sql id="extend_query_condition">
		<if test="query.regionIdFuzzy != null and query.regionIdFuzzy != ''">
			and region_id like concat('%',#{query.regionIdFuzzy},'%')
		</if>
		<if test="query.centerPointFuzzy != null and query.centerPointFuzzy != ''">
			and center_point like concat('%',#{query.centerPointFuzzy},'%')
		</if>
		<if test="query.polygonPointsFuzzy != null and query.polygonPointsFuzzy != ''">
			and polygon_points like concat('%',#{query.polygonPointsFuzzy},'%')
		</if>
	</sql>

	<!-- 列表查询条件 WHEN 模式 -->
	<!-- 使用 WHEN，最多只有一个 WHEN 分支被执行  -->
	<sql id="list_query_condition_use_when">
		<choose>
			<when test="query.regionIdList != null and query.regionIdList.size() > 0">
				and region_id in
				<foreach collection="regionIdList" separator="," open="(" close=")" item="regionId">
					#{regionId}
				</foreach>
			</when>
			<when test="query.centerPointList != null and query.centerPointList.size() > 0">
				and center_point in
				<foreach collection="centerPointList" separator="," open="(" close=")" item="centerPoint">
					#{centerPoint}
				</foreach>
			</when>
			<when test="query.polygonPointsList != null and query.polygonPointsList.size() > 0">
				and polygon_points in
				<foreach collection="polygonPointsList" separator="," open="(" close=")" item="polygonPoints">
					#{polygonPoints}
				</foreach>
			</when>
			<otherwise>

			</otherwise>
		</choose>
	</sql>

	<!-- 列表查询条件 IF 模式  -->
	<!-- 使用 IF，可能有多个 IF 分支被执行  -->
	<sql id="list_query_condition_use_if">
		<if test="query.regionIdList != null and query.regionIdList.size() > 0">
			and region_id in
			<foreach collection="regionIdList" separator="," open="(" close=")" item="regionId">
			#{regionId}
			</foreach>
		</if>
		<if test="query.centerPointList != null and query.centerPointList.size() > 0">
			and center_point in
			<foreach collection="centerPointList" separator="," open="(" close=")" item="centerPoint">
			#{centerPoint}
			</foreach>
		</if>
		<if test="query.polygonPointsList != null and query.polygonPointsList.size() > 0">
			and polygon_points in
			<foreach collection="polygonPointsList" separator="," open="(" close=")" item="polygonPoints">
			#{polygonPoints}
			</foreach>
		</if>
	</sql>

	<!-- 通用查询条件 -->
	<sql id="general_query_condition">
		<where>
			<include refid="base_query_condition"/>
			<include refid="extend_query_condition"/>
			<include refid="list_query_condition_use_when"/>
		</where>
	</sql>

	<!-- 查询列表 -->
	<!-- 这里包含了基础、扩展以及列表查询，使用时请注意查询条件 -->
	<!-- 建议使用时new一个新的query对象，然后设置需要查询的属性条件 -->
	<select id="selectList" resultMap="base_result_map">
		select
		<include refid="base_column_list"/>
		from region_center
		<include refid="general_query_condition"/>
		<if test="query.orderBy != null">
			order by ${query.orderBy}
		</if>
		<if test="query.simplePage != null">
			limit #{query.simplePage.start},#{query.simplePage.pageSize}
		</if>
	</select>

	<!-- 查询数量 -->
	<!-- 这里包含了基础、扩展以及列表查询，使用时请注意查询条件 -->
	<!-- 建议使用时new一个新的query对象，然后设置需要查询的属性条件 -->
	<select id="selectCount" resultType="java.lang.Integer">
		select count(1) from region_center
		<include refid="general_query_condition"/>
	</select>

	<!-- 单行插入 -->
	<!-- 允许指定主键 -->
	<insert id="insert" parameterType="com.example.entity.po.RegionCenterEntity">
		insert into region_center
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="bean.regionId != null">
				region_id,
			</if>
			<if test="bean.centerPoint != null">
				center_point,
			</if>
			<if test="bean.polygonPoints != null">
				polygon_points,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="bean.regionId != null">
				#{bean.regionId},
			</if>
			<if test="bean.centerPoint != null">
				#{bean.centerPoint},
			</if>
			<if test="bean.polygonPoints != null">
				#{bean.polygonPoints},
			</if>
		</trim>
	</insert>

	<!-- 插入或更新（只要存在任一唯一键冲突就更新，否则插入） -->
	<!-- 允许null值覆盖非null值 -->
	<!-- 允许指定或更新主键 -->
	<!-- 允许指定或更新唯一键 -->
	<insert id="insertOrUpdate" parameterType="com.example.entity.po.RegionCenterEntity">
		insert into region_center
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="bean.regionId != null">
				region_id,
			</if>
			<if test="bean.centerPoint != null">
				center_point,
			</if>
			<if test="bean.polygonPoints != null">
				polygon_points,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="bean.regionId != null">
				#{bean.regionId},
			</if>
			<if test="bean.centerPoint != null">
				#{bean.centerPoint},
			</if>
			<if test="bean.polygonPoints != null">
				#{bean.polygonPoints},
			</if>
		</trim>
		on duplicate key update
		region_id = values(region_id),
		center_point = values(center_point),
		polygon_points = values(polygon_points)
	</insert>

	<!-- 批量插入 -->
	<!-- 允许指定主键，不允许更新自增键 -->
	<insert id="insertBatch" parameterType="com.example.entity.po.RegionCenterEntity">
		insert into
		region_center(region_id,center_point,polygon_points)
		values
		<foreach collection="list" item="item" separator=",">
			(
			#{item.regionId},#{item.centerPoint},#{item.polygonPoints}
			)
		</foreach>
	</insert>

	<!-- 批量插入或更新 -->
	<!-- 允许null值覆盖非null值 -->
	<!-- 允许指定或更新主键，不允许更新自增键 -->
	<!-- 允许指定或更新非自增的的唯一键 -->
	<insert id="insertOrUpdateBatch" parameterType="com.example.entity.po.RegionCenterEntity">
		insert into
		region_center(region_id,center_point,polygon_points)
		values
		<foreach collection="list" item="item" separator=",">
			(
			#{item.regionId},#{item.centerPoint},#{item.polygonPoints}
			)
		</foreach>
		on duplicate key update
		region_id = values(region_id),
		center_point = values(center_point),
		polygon_points = values(polygon_points)
	</insert>

	<!-- 根据RegionId查询 -->
	<select id="selectByRegionId" resultMap="base_result_map">
		select
		<include refid="base_column_list"/>
		from region_center
		where region_id=#{regionId}
	</select>

	<!-- 根据RegionId更新 -->
	<!-- 不允许null值覆盖非null值（若用一条除主键外全是null的数据更新，则报错） -->
	<!-- 允许指定主键 -->
	<update id="updateByRegionId" parameterType="com.example.entity.po.RegionCenterEntity">
		update region_center
		<set>
			<if test="bean.regionId != null">
				region_id = #{bean.regionId},
			</if>
			<if test="bean.centerPoint != null">
				center_point = #{bean.centerPoint},
			</if>
			<if test="bean.polygonPoints != null">
				polygon_points = #{bean.polygonPoints},
			</if>
		</set>
		where region_id=#{regionId}
	</update>

	<!-- 根据RegionId删除 -->
	<delete id="deleteByRegionId">
		delete
		from region_center
		where region_id=#{regionId}
	</delete>

	<!-- 根据RegionIdList列表查询 -->
	<select id="selectByRegionIdList" resultMap="base_result_map">
		select
		<include refid="base_column_list"/>
		from region_center
		where region_id in
		<foreach collection="regionIdList" separator="," open="(" close=")" item="regionId">
			#{regionId}
		</foreach>
	</select>


</mapper>
