<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.mapper.UserInfoMapper">

	<!-- 实体映射 -->
	<resultMap id="base_result_map" type="com.example.entity.po.UserInfoEntity">
		<!-- 用户唯一标识 -->
		<id column="imsi" property="imsi"/>
		<!-- 性别(0:女,1:男) -->
		<result column="gender" property="gender"/>
		<!-- 年龄 -->
		<result column="age" property="age"/>
	</resultMap>

	<!-- 通用结果查询列 -->
	<sql id="base_column_list">
		imsi, gender, age
	</sql>

	<!-- 基础查询条件 -->
	<sql id="base_query_condition">
		<if test="query.imsi != null and query.imsi != ''">
			and imsi = #{query.imsi}
		</if>
		<if test="query.gender != null">
			and gender = #{query.gender}
		</if>
		<if test="query.age != null">
			and age = #{query.age}
		</if>
	</sql>

	<!-- 扩展查询条件 -->
	<sql id="extend_query_condition">
		<if test="query.imsiFuzzy != null and query.imsiFuzzy != ''">
			and imsi like concat('%',#{query.imsiFuzzy},'%')
		</if>
	</sql>

	<!-- 列表查询条件 WHEN 模式 -->
	<!-- 使用 WHEN，最多只有一个 WHEN 分支被执行  -->
	<sql id="list_query_condition_use_when">
		<choose>
			<when test="query.imsiList != null and query.imsiList.size() > 0">
				and imsi in
				<foreach collection="imsiList" separator="," open="(" close=")" item="imsi">
					#{imsi}
				</foreach>
			</when>
			<when test="query.genderList != null and query.genderList.size() > 0">
				and gender in
				<foreach collection="genderList" separator="," open="(" close=")" item="gender">
					#{gender}
				</foreach>
			</when>
			<when test="query.ageList != null and query.ageList.size() > 0">
				and age in
				<foreach collection="ageList" separator="," open="(" close=")" item="age">
					#{age}
				</foreach>
			</when>
			<otherwise>

			</otherwise>
		</choose>
	</sql>

	<!-- 列表查询条件 IF 模式  -->
	<!-- 使用 IF，可能有多个 IF 分支被执行  -->
	<sql id="list_query_condition_use_if">
		<if test="query.imsiList != null and query.imsiList.size() > 0">
			and imsi in
			<foreach collection="imsiList" separator="," open="(" close=")" item="imsi">
			#{imsi}
			</foreach>
		</if>
		<if test="query.genderList != null and query.genderList.size() > 0">
			and gender in
			<foreach collection="genderList" separator="," open="(" close=")" item="gender">
			#{gender}
			</foreach>
		</if>
		<if test="query.ageList != null and query.ageList.size() > 0">
			and age in
			<foreach collection="ageList" separator="," open="(" close=")" item="age">
			#{age}
			</foreach>
		</if>
	</sql>

	<!-- 通用查询条件 -->
	<sql id="general_query_condition">
		<where>
			<include refid="base_query_condition"/>
			<include refid="extend_query_condition"/>
			<include refid="list_query_condition_use_when"/>
		</where>
	</sql>

	<!-- 查询列表 -->
	<!-- 这里包含了基础、扩展以及列表查询，使用时请注意查询条件 -->
	<!-- 建议使用时new一个新的query对象，然后设置需要查询的属性条件 -->
	<select id="selectList" resultMap="base_result_map">
		select
		<include refid="base_column_list"/>
		from user_info
		<include refid="general_query_condition"/>
		<if test="query.orderBy != null">
			order by ${query.orderBy}
		</if>
		<if test="query.simplePage != null">
			limit #{query.simplePage.start},#{query.simplePage.pageSize}
		</if>
	</select>

	<!-- 查询数量 -->
	<!-- 这里包含了基础、扩展以及列表查询，使用时请注意查询条件 -->
	<!-- 建议使用时new一个新的query对象，然后设置需要查询的属性条件 -->
	<select id="selectCount" resultType="java.lang.Integer">
		select count(1) from user_info
		<include refid="general_query_condition"/>
	</select>

	<!-- 单行插入 -->
	<!-- 允许指定主键 -->
	<insert id="insert" parameterType="com.example.entity.po.UserInfoEntity">
		insert into user_info
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="bean.imsi != null">
				imsi,
			</if>
			<if test="bean.gender != null">
				gender,
			</if>
			<if test="bean.age != null">
				age,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="bean.imsi != null">
				#{bean.imsi},
			</if>
			<if test="bean.gender != null">
				#{bean.gender},
			</if>
			<if test="bean.age != null">
				#{bean.age},
			</if>
		</trim>
	</insert>

	<!-- 插入或更新（只要存在任一唯一键冲突就更新，否则插入） -->
	<!-- 允许null值覆盖非null值 -->
	<!-- 允许指定或更新主键 -->
	<!-- 允许指定或更新唯一键 -->
	<insert id="insertOrUpdate" parameterType="com.example.entity.po.UserInfoEntity">
		insert into user_info
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="bean.imsi != null">
				imsi,
			</if>
			<if test="bean.gender != null">
				gender,
			</if>
			<if test="bean.age != null">
				age,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="bean.imsi != null">
				#{bean.imsi},
			</if>
			<if test="bean.gender != null">
				#{bean.gender},
			</if>
			<if test="bean.age != null">
				#{bean.age},
			</if>
		</trim>
		on duplicate key update
		imsi = values(imsi),
		gender = values(gender),
		age = values(age)
	</insert>

	<!-- 批量插入 -->
	<!-- 允许指定主键，不允许更新自增键 -->
	<insert id="insertBatch" parameterType="com.example.entity.po.UserInfoEntity">
		insert into
		user_info(imsi,gender,age)
		values
		<foreach collection="list" item="item" separator=",">
			(
			#{item.imsi},#{item.gender},#{item.age}
			)
		</foreach>
	</insert>

	<!-- 批量插入或更新 -->
	<!-- 允许null值覆盖非null值 -->
	<!-- 允许指定或更新主键，不允许更新自增键 -->
	<!-- 允许指定或更新非自增的的唯一键 -->
	<insert id="insertOrUpdateBatch" parameterType="com.example.entity.po.UserInfoEntity">
		insert into
		user_info(imsi,gender,age)
		values
		<foreach collection="list" item="item" separator=",">
			(
			#{item.imsi},#{item.gender},#{item.age}
			)
		</foreach>
		on duplicate key update
		imsi = values(imsi),
		gender = values(gender),
		age = values(age)
	</insert>

	<!-- 根据Imsi查询 -->
	<select id="selectByImsi" resultMap="base_result_map">
		select
		<include refid="base_column_list"/>
		from user_info
		where imsi=#{imsi}
	</select>

	<!-- 根据Imsi更新 -->
	<!-- 不允许null值覆盖非null值（若用一条除主键外全是null的数据更新，则报错） -->
	<!-- 允许指定主键 -->
	<update id="updateByImsi" parameterType="com.example.entity.po.UserInfoEntity">
		update user_info
		<set>
			<if test="bean.imsi != null">
				imsi = #{bean.imsi},
			</if>
			<if test="bean.gender != null">
				gender = #{bean.gender},
			</if>
			<if test="bean.age != null">
				age = #{bean.age},
			</if>
		</set>
		where imsi=#{imsi}
	</update>

	<!-- 根据Imsi删除 -->
	<delete id="deleteByImsi">
		delete
		from user_info
		where imsi=#{imsi}
	</delete>

	<!-- 根据ImsiList列表查询 -->
	<select id="selectByImsiList" resultMap="base_result_map">
		select
		<include refid="base_column_list"/>
		from user_info
		where imsi in
		<foreach collection="imsiList" separator="," open="(" close=")" item="imsi">
			#{imsi}
		</foreach>
	</select>


</mapper>
